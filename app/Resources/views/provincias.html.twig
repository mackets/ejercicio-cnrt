<!DOCTYPE html>
<html>

    <head>

        <meta charset="UTF-8" />
        <meta charset="utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
        <meta name="description" content="" />
        <meta name="author" content="" />
        <title>{% block title %}CNRT | Consulta de provincias{% endblock %}</title>
        {% block stylesheets %}
        <link href="https://cdn.jsdelivr.net/npm/simple-datatables@latest/dist/style.css" rel="stylesheet" />
        <link href="css/styles.css" rel="stylesheet" />
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        {% endblock %}        

    </head>

    <body class="sb-nav-fixed">
    
        {% block body %}

            <nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark">

                <!-- Botón CNRT que lleva al index -->

                <a class="navbar-brand ps-3" href="/index">CNRT - Comisión Nacional Reguladora de Transporte</a>

            </nav>

            <!-- Menú de consultas -->

            <div id="layoutSidenav">

                <div id="layoutSidenav_nav">
            
                    <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">

                        <div class="sb-sidenav-menu">

                            <div class="nav">

                                <div class="collapse" id="collapsePages" aria-labelledby="headingTwo" data-bs-parent="#sidenavAccordion">

                                </div>

                                <!-- Título del menú -->

                                <div class="sb-sidenav-menu-heading">Consultas</div>

                                <!-- Botón Países -->

                                <a class="nav-link" href="/paises">

                                    <div class="sb-nav-link-icon"><i class="fas fa-table"></i></div>
                                    Paises activos

                                </a>

                                <!-- Botón Provincias -->

                                <a class="nav-link" href="/provincias">

                                    <div class="sb-nav-link-icon"><i class="fas fa-table"></i></div>
                                    Provincias

                                </a>

                                <!-- Botón Altas -->

                                <a class="nav-link collapsed" href="#" data-bs-toggle="collapse" data-bs-target="#collapseLayouts" aria-expanded="false" aria-controls="collapseLayouts">
                                    <div class="sb-nav-link-icon"><i class="fa-solid fa-pencil"></i></div>
                                        Altas
                                    <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                                </a>

                                <div class="collapse" id="collapseLayouts" aria-labelledby="headingOne" data-bs-parent="#sidenavAccordion">
                                    <nav class="sb-sidenav-menu-nested nav">
                                        <a class="nav-link" href="/altas">Paises</a>
                                        <a class="nav-link" href="#">Provincias</a>
                                    </nav>
                                </div>

                            </div>

                        </div>
                    
                    </nav>

                </div>

                <div id="layoutSidenav_content">

                    <!-- Main de la página -->

                    <main>

                        <div class="container-fluid px-4">
                            <h1 class="mt-4">Consulta de provincias</h1>
                        </div>

                        <!-- Tabla de países -->

                        <div class="container-fluid px-4">
                            <div class="card mb-4">
                                <div class="card-header">
                                    <i class="fas fa-table me-1"></i>
                                    Tabla provincias
                                </div>
                                <div class="card-body">
                                    <table id="datatablesSimple">

                                        <!-- Campos de la tabla -->

                                        <thead>

                                            <tr>

                                                <th>Id</th>
                                                <th>Id de País</th>
                                                <th>Nombre</th>
                                                <th>Abreviación</th>
                                                <th>¿Está activo?</th>

                                            </tr>

                                        </thead>

                                        <!-- Contenido de las tablas -->

                                        <tbody>

                                           {% for provincia in provincias %}

                                                <tr>

                                                    <td>{{provincia.id}}</td>
                                                    <td> - </td>
                                                    <td>{{provincia.descripcion}}</td>
                                                    <td>{{provincia.abrev}}</td>

                                                    {% if provincia.activo == 1 %}
                                                        <td>SI</td>
                                                    {% else %}
                                                        <td>NO</td>
                                                    {% endif %}

                                                </tr>
                                                
                                            {% endfor %}

                                        </tbody>

                                    </table>

                                    <!-- Botón de búsqueda de países activos -->

                                    <!-- <div class="mt-4 mb-0">
                                        <div class="d-grid"><a class="btn btn-primary btn-block" href="/index">Buscar Activos</a></div>
                                    </div>
                                    -->

                                </div>

                            </div>

                        </div>

                    </main>

                    <!-- Pie de página -->

                    <footer class="py-4 --bs-body-bg: mt-auto">

                        <div class="container-fluid px-4">

                            <div class="d-flex align-items-center justify-content-between small">
                                <div class="text-muted">Copyright &copy; Julián Maciel | CNRT 2022</div>
                            </div>

                        </div>

                    </footer>

                </div>
            
            </div>

        {% endblock %}

        {% block javascripts %}
            <script src="https://use.fontawesome.com/releases/v6.1.0/js/all.js" crossorigin="anonymous"></script>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
            <script src="js/scripts.js"></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.min.js" crossorigin="anonymous"></script>
            <script src="assets/demo/chart-area-demo.js"></script>
            <script src="assets/demo/chart-bar-demo.js"></script>
            <script src="https://cdn.jsdelivr.net/npm/simple-datatables@latest" crossorigin="anonymous"></script>
            <script src="js/datatables-simple-demo.js"></script>
        {% endblock %}

    </body>

</html>
